{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "data": [
    {
      "name": "source_0",
      "url": "data/weather.csv",
      "format": {"type": "csv", "parse": {"date": "date"}},
      "transform": [
        {
          "field": "date",
          "type": "timeunit",
          "units": ["month"],
          "as": ["month_date", "month_date_end"]
        },
        {
          "type": "aggregate",
          "groupby": ["month_date", "location"],
          "ops": ["mean", "mean", "mean"],
          "fields": ["precipitation", "wind", "temp_max"],
          "as": ["mean_precipitation", "mean_wind", "mean_temp_max"]
        }
      ]
    }
  ],
  "signals": [
    {"name": "childWidth", "value": 200},
    {"name": "childHeight", "value": 200}
  ],
  "layout": {"padding": 20, "bounds": "full", "align": "all"},
  "marks": [
    {
      "type": "group",
      "name": "temp_max_group",
      "style": "cell",
      "encode": {
        "update": {
          "width": {"signal": "childWidth"},
          "height": {"signal": "childHeight"}
        }
      },
      "marks": [
        {
          "name": "temp_max_pathgroup",
          "type": "group",
          "from": {
            "facet": {
              "name": "faceted_path_temp_max_main",
              "data": "source_0",
              "groupby": ["location"]
            }
          },
          "encode": {
            "update": {
              "width": {"field": {"group": "width"}},
              "height": {"field": {"group": "height"}}
            }
          },
          "marks": [
            {
              "name": "temp_max_marks",
              "type": "line",
              "style": ["line"],
              "sort": {"field": "datum[\"month_date\"]"},
              "from": {"data": "faceted_path_temp_max_main"},
              "encode": {
                "update": {
                  "stroke": {"scale": "color", "field": "location"},
                  "x": {"scale": "temp_max_x", "field": "month_date"},
                  "y": {"scale": "temp_max_y", "field": "mean_temp_max"},
                  "defined": {
                    "signal": "isValid(datum[\"month_date\"]) && isFinite(+datum[\"month_date\"]) && isValid(datum[\"mean_temp_max\"]) && isFinite(+datum[\"mean_temp_max\"])"
                  }
                }
              }
            }
          ]
        }
      ],
      "axes": [
        {
          "scale": "temp_max_x",
          "orient": "bottom",
          "gridScale": "temp_max_y",
          "grid": true,
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "temp_max_y",
          "orient": "left",
          "gridScale": "temp_max_x",
          "grid": true,
          "tickCount": {"signal": "ceil(childHeight/40)"},
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "temp_max_x",
          "orient": "bottom",
          "grid": false,
          "title": "date (month)",
          "labelFlush": true,
          "labelOverlap": true,
          "encode": {
            "labels": {
              "update": {
                "text": {
                  "signal": "timeFormat(datum.value, timeUnitSpecifier([\"month\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))"
                }
              }
            }
          },
          "zindex": 0
        },
        {
          "scale": "temp_max_y",
          "orient": "left",
          "grid": false,
          "title": "Mean of temp_max",
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(childHeight/40)"},
          "zindex": 0
        }
      ]
    },
    {
      "type": "group",
      "name": "precipitation_group",
      "style": "cell",
      "encode": {
        "update": {
          "width": {"signal": "childWidth"},
          "height": {"signal": "childHeight"}
        }
      },
      "marks": [
        {
          "name": "precipitation_pathgroup",
          "type": "group",
          "from": {
            "facet": {
              "name": "faceted_path_precipitation_main",
              "data": "source_0",
              "groupby": ["location"]
            }
          },
          "encode": {
            "update": {
              "width": {"field": {"group": "width"}},
              "height": {"field": {"group": "height"}}
            }
          },
          "marks": [
            {
              "name": "precipitation_marks",
              "type": "line",
              "style": ["line"],
              "sort": {"field": "datum[\"month_date\"]"},
              "from": {"data": "faceted_path_precipitation_main"},
              "encode": {
                "update": {
                  "stroke": {"scale": "color", "field": "location"},
                  "x": {"scale": "precipitation_x", "field": "month_date"},
                  "y": {
                    "scale": "precipitation_y",
                    "field": "mean_precipitation"
                  },
                  "defined": {
                    "signal": "isValid(datum[\"month_date\"]) && isFinite(+datum[\"month_date\"]) && isValid(datum[\"mean_precipitation\"]) && isFinite(+datum[\"mean_precipitation\"])"
                  }
                }
              }
            }
          ]
        }
      ],
      "axes": [
        {
          "scale": "precipitation_x",
          "orient": "bottom",
          "gridScale": "precipitation_y",
          "grid": true,
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "precipitation_y",
          "orient": "left",
          "gridScale": "precipitation_x",
          "grid": true,
          "tickCount": {"signal": "ceil(childHeight/40)"},
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "precipitation_x",
          "orient": "bottom",
          "grid": false,
          "title": "date (month)",
          "labelFlush": true,
          "labelOverlap": true,
          "encode": {
            "labels": {
              "update": {
                "text": {
                  "signal": "timeFormat(datum.value, timeUnitSpecifier([\"month\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))"
                }
              }
            }
          },
          "zindex": 0
        },
        {
          "scale": "precipitation_y",
          "orient": "left",
          "grid": false,
          "title": "Mean of precipitation",
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(childHeight/40)"},
          "zindex": 0
        }
      ]
    },
    {
      "type": "group",
      "name": "wind_group",
      "style": "cell",
      "encode": {
        "update": {
          "width": {"signal": "childWidth"},
          "height": {"signal": "childHeight"}
        }
      },
      "marks": [
        {
          "name": "wind_pathgroup",
          "type": "group",
          "from": {
            "facet": {
              "name": "faceted_path_wind_main",
              "data": "source_0",
