          ]
        }
      ],
      "axes": [
        {
          "scale": "wind_x",
          "orient": "bottom",
          "gridScale": "wind_y",
          "grid": true,
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "wind_y",
          "orient": "left",
          "gridScale": "wind_x",
          "grid": true,
          "tickCount": {"signal": "ceil(childHeight/40)"},
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "wind_x",
          "orient": "bottom",
          "grid": false,
          "title": "date (month)",
          "labelFlush": true,
          "labelOverlap": true,
          "encode": {
            "labels": {
              "update": {
                "text": {
                  "signal": "timeFormat(datum.value, timeUnitSpecifier([\"month\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))"
                }
              }
            }
          },
          "zindex": 0
        },
        {
          "scale": "wind_y",
          "orient": "left",
          "grid": false,
          "title": "Mean of wind",
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(childHeight/40)"},
          "zindex": 0
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "source_0", "field": "location", "sort": true},
      "range": "category"
    },
    {
      "name": "temp_max_x",
      "type": "time",
      "domain": {"data": "source_0", "field": "month_date"},
      "range": [0, {"signal": "childWidth"}]
    },
    {
      "name": "temp_max_y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "mean_temp_max"},
      "range": [{"signal": "childHeight"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "precipitation_x",
